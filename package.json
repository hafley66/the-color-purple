{
  "name": "demos",
  "version": "1.0.0",
  "description": "demo application to show how to structure a front-end app",
  "main": "bundle.js",
  "dependencies": {
    "angular": "^1.5.8",
    "autoprefixer-loader": "^3.2.0",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.4",
    "bootstrap-sass": "^3.3.7",
    "css-loader": "^0.23.1",
    "fastdom": "^1.0.4",
    "file-loader": "^0.9.0",
    "flexboxgrid": "^6.3.1",
    "html-loader": "^0.4.3",
    "image-loader": "^0.0.1",
    "json-loader": "^0.5.4",
    "lodash": "^4.15.0",
    "mezr": "github:niklasramo/mezr",
    "ngtemplate-loader": "^1.3.1",
    "normalize.css": "^4.2.0",
    "postcss-loader": "^0.9.1",
    "pug": "^2.0.0-beta5",
    "pug-loader": "^2.2.1",
    "react": "^15.0.0",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "cson-loader": "^0.1.0"
  },
  "scripts": {
    "build:index": "pug src/bootstrap-app/page/index.pug -o ./ -f",
    "build:entry": "pug src/components/site/build.pug -o src/components/site/ -f",
    "build:html": "npm run build:index && npm run build:entry",
    "build:css": "node-sass --output-style compressed src/components/site/build.sass > src/components/site/build.css",
    "watch:index": "pug -w src/bootstrap-app/page/index.pug -o ./ -f &",
    "watch:entry": "pug -w src/components/site/build.pug -o src/components/site/ -f &",
    "watch:html": "npm run watch:index && npm run watch:entry",
    "dev": "npm run watch:html && webpack-dev-server --inline --hot",
    "build": "npm run build:html && webpack --optimize-minimize",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC"
}
