{
  "name": "demos",
  "version": "1.0.0",
  "description": "demo application to show how to structure a front-end app",
  "main": "bundle.js",
  "dependencies": {
    "angular": "^1.5.8",
    "autoprefixer-loader": "^3.2.0",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.4",
    "bootstrap-sass": "^3.3.7",
    "css-loader": "^0.23.1",
    "fastdom": "^1.0.4",
    "file-loader": "^0.9.0",
    "flexboxgrid": "^6.3.1",
    "html-loader": "^0.4.3",
    "image-loader": "^0.0.1",
    "json-loader": "^0.5.4",
    "lodash": "^4.15.0",
    "mezr": "github:niklasramo/mezr",
    "ngtemplate-loader": "^1.3.1",
    "normalize.css": "^4.2.0",
    "postcss-loader": "^0.9.1",
    "pug": "^2.0.0-beta5",
    "pug-loader": "^2.2.1",
    "react": "^15.0.0",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "cson-loader": "^0.1.0"
  },
  "scripts": {
    "clean": "rm -rf build",

    "_PUG:index": "echo 'pug src/bootstrap-app/page/index.pug -o ./ -f'",
    "_PUG:entry": "echo 'pug src/components/site/build.pug -o build/components/site/ -f'",
    "_SASS:bootstrap": "echo 'node-sass --output-style compressed src/bootstrap-app/custom-bootstrap-grid/bootstrap.scss -o build/bootstrap-app/custom-bootstrap-grid/'",
    "_SASS:client": "echo 'node-sass --output-style compressed src/components/site/build.sass -o build/components/site/'",

    "bPUG:index": "eval \"`npm run _PUG:index`\"",
    "bPUG:entry": "eval \"`npm run _PUG:entry`\"",
    "bPUG": "npm run bPUG:index && npm run bPUG:entry",
    "bES6:client": "babel src -d build",
    "bSASS:bootstrap": "eval \"`npm run _SASS:bootstrap`\"",
    "bSASS:client": "eval \"`npm run _SASS:client`\"",
    "bSASS": "npm run bSASS:bootstrap && npm run bSASS:client",
    "b0": "npm run bES6:client && npm run bSASS && npm run bPUG",

    "wPUG:index": "eval \"`npm run _PUG:index` -w &\"",
    "wPUG:entry": "eval \"`npm run _PUG:entry` -w &\"",
    "wPUG": "npm run wPUG:index && npm run wPUG:entry",
    "wES6:client": "babel -w src/ -d build/ -D &",
    "wSASS:bootstrap": "eval \"`npm run _SASS:bootstrap` -w &\"",
    "wSASS:client": "eval \"`npm run _SASS:client` -w &\"",
    "wSASS": "npm run wSASS:bootstrap && npm run wSASS:client",
    "w": "npm run b0 && npm run wES6:client && npm run wSASS && npm run wPUG",

    "dev": "npm run clean && npm run w && webpack-dev-server --inline --hot",
    "build": "npm run clean && npm run b0 && webpack --optimize-minimize",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC"
}
