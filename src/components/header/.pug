include ../global.pug
include ./titler.pug
include ./contentler.pug

mixin build
	+THE-HEADER
	+redoodler

mixin THE-HEADER
	#header.above
		+row-of-links

mixin row-of-links
	.LINKS(hover-state)
		.roh
			.col-sm-4(ng-repeat='link in header.links' my-tween to="1" duration="0.1" 
			ng-mouseenter="tween.play()" 
			ng-mouseleave="tween.reverse()"
			)
				+a-header-link
					|{{link}}
				+fit-svg.abs-cover.low
					path.no-fill(relative-d="{{paths.linkPath(tween.T)}}")

mixin redoodler
	#body.relative(class="{{header.active}}")
		+titler
		+contentler
		
mixin a-path(pathString)
	+fit-svg&attributes(attributes)
		path(relative-d=pathString)

mixin a-header-link
	.clicker(ng-click="header.activate(link)")
		+a-header-text
			|{{link}}
mixin a-header-text
	div.header-link(class=`
	txt-center	
	padd-md	
	font-md	
	uppercase	
	dense	
	no-highlight	
	pointer	
	underline
		`)&attributes(attributes)
		block

+build