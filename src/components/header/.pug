include ../global.pug

mixin build
	+THE-HEADER
	+redo

mixin THE-HEADER
	#header.above
		+row-of-links

mixin row-of-links
	.LINKS(hover-state)
		.roh
			.col-sm-4(ng-repeat='link in header.links' my-tween to="1" duration="0.1" ng-mouseenter="tween.play()" ng-mouseleave="tween.reverse()")
				+a-header-link
					|{{link}}
				+fit-svg.abs-cover.low
					path.no-fill(relative-d="{{header.linkPath(tween.T)}}")

mixin redo
	#body.relative
		
		+a-triangle
			+a-path("{{header.triangleUp(tween.T)}}")
			+hero-text
			//- .test-tri
			//- 	+fit-svg.abs-cover
			//- 		+a-path('M 0 50% L 50% 0 L 100% 50% L 50% 100% Z')
		
		+the-content-box
		
		+a-triangle
			+a-path("{{header.triangleDown(tween.T)}}")

mixin the-content-box
	#content.relative
		|Hello world

mixin a-path(pathString)
		+fit-svg&attributes(attributes)
			path(relative-d=pathString)

mixin a-header-link
	.clicker(
		ng-class="{outline: ctrl.isActive(link)}"
		ng-click="ctrl.activateLink(link)"
		ng-mouseenter="ctrl.anchorOn(link)"
	)
		+a-header-text
			|{{link}}
mixin a-header-text
	div.header-link(class=`
	txt-center	
	padd-md	
	font-md	
	uppercase	
	dense	
	no-highlight	
	pointer	
	underline
		`)&attributes(attributes)
		block
mixin a-triangle
	.low.tri-height.relative&attributes(attributes)
		block
mixin hero-text
	.hero-text.txt-center.black.dense.uppercase.bold.abs-width.align-bottom
		|Chris Hafley
		.font-xs.flat-line
			|SOFTWARE ENGINEER
+build