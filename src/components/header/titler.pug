mixin titler
	#titler.relative
		+a-triangle.thats-above.abs-width.above.higher
			+a-path("{{paths.triangleUp(tween.T)}}", false)
		+title-text.highest
		+shadow-triangles
		+a-triangle.thats-below.abs-width.below.no-click.higher
			+a-path("{{paths.triangleDown(tween.T)}}")

mixin title-text
	.hero.txt-center.relative.cc-bg&attributes(attributes)
		.abs-center.cc-bg.highest
			.white.hero-text.flat-line.sans2(ng-class="{'bord-b-sm': page.subText}")
				|{{page.mainText}}
			.white.sub-text.font-xs.flat-line.sans3(ng-show="page.subText")
				|{{page.subText}}
		block

mixin shadow-triangles() 
	div&attributes(attributes)
		.shadow-triangle.align-left.lowest.below
			+a-path("M 0 0 L 50% 100% L 50% 0 Z")
		.shadow-triangle.align-right.lowest.below
			+a-path("M 100% 0 L 50% 100% L 50% 0 Z")