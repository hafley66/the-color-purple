include ../common.pug
include triangle/

	
mixin the-content()
	.the-content.low.relative
		.flow-in.over-hidden(flow-in="ctrl.isActive(item)") 
			.content&attributes(attributes)
				block
				+rsvg.tri.align-bottom.wide
					+triangle-D.t-above.no-stroke.cc-fill

mixin decorator-button-0
	.svg-button-0.will-move-gpu&attributes(attributes)
		.svg-group
			+rsvg
				rect.the-mask.blanket(y=-10, width=60, height=120)
			+rsvg.the-background.abs.rotation.matrix.top-on-middle
				rect(x=0, y= 0, width=100, height=100)
				rect.inner.no-stroke.swap-color(x=10, y= 10, width=80, height=80)
		block

mixin blanket
	+svg.blanket&attributes(attributes)
		rect.blanket(x=0, y=0, width=100, height=100)
mixin the-toggle
	+cc-parent.the-toggle.relative.will-move-gpu( ng-click="ctrl.toggle(item)" )
		+rsvg.tri.align-top
			+triangle-U.no-stroke.cc-fill
		mixin cc-background
			.cc-bord-sm&attributes(attributes)
				//- +decorator-button-0.abs-height(square-please)
					//- .text.uppercase.abs-center.white
						//- | back
		mixin cc-text
			.form-name.txt-center.uppercase.font-lg.flat-line.no-highlight&attributes(attributes)
				.matrix {{item}}
mixin m-triangle-menu()
	.m-triangle-menu.registration.form-items.menu(
			ng-controller="fuck as ctrl"
			ng-class="{'g_active': ctrl.isActive()}"
		)
		.form-item-instance.instance.relative.will-move-gpu.l_active(
			ng-repeat="item in ctrl.items"
			ng-class="{'l_active': ctrl.isActive(item)}"
			class="{{::item}}"
			float-top
			hover-state
		)
			+the-toggle
			+the-content
				.resume-sections(ng-repeat="section in ['education', 'work history', 'projects']")
					.heading.font-md.black-bg.white.uppercase.p-xs.flat-line
						| {{::section}}
					.text
						| HURRDURR

.relative.dim-cover
	.m-login.collapse-child-margins
		+m-triangle-menu()
