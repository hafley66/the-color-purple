include ../common.pug
include triangle/

	
mixin the-content()
	.the-content.low.relative
		.flow-in.over-hidden(flow-in="ctrl.isActive(item)") 
			.content&attributes(attributes)
				block
				+rsvg.tri.align-bottom.wide
					+triangle-D.t-above.no-stroke.cc-fill

mixin the-toggle
	+cc-parent.the-toggle.relative.will-move-gpu( ng-click="ctrl.toggle(item)" )
		mixin cc-background
			.cc-bord-sm&attributes(attributes)
		mixin cc-text
			.form-name.txt-center.uppercase.font-xl.flat-line.no-highlight&attributes(attributes)
				.matrix.relative
					|{{item}}
					.sub-text.abs-width.below.txt-center.font-md-rem.flat-line-rem.hide.shader
						|Software Engineer
mixin m-triangle-menu()
	.m-triangle-menu.registration.form-items.menu(
			ng-controller="fuck as ctrl"
			ng-class="{'g_active': ctrl.isActive()}"
		)
		.form-item-instance.instance.relative.will-move-gpu.l_active(
			ng-repeat="item in ctrl.items"
			ng-class="{'l_active': ctrl.isActive(item)}"
			class="{{::item}}"
			float-top
			hover-state
		)
			+the-toggle.padd-md
			+the-content.cc-bord-sm
				.my-resume-content.clearfix
					.my-resume-experience.column.float-left(ng-repeat="section in ['education', 'work history', 'projects']")
					.my-resume-education.column.float-left
					.heading.font-md.black-bg.white.uppercase.p-xs.flat-line
						| {{::section}}
					.text
						| HURRDURR

.relative.dim-cover
	.m-login.collapse-child-margins
		+m-triangle-menu()

mixin my-resume
	.resume
