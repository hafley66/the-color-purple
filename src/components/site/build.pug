include ../global.pug
include ./Headler.pug
include ./Navler.pug
include ./Mainler.pug
include ./Titler.pug
include ./Contactler.pug
include ./Contentler.pug

mixin build
	div(class="{{site.active}}")
		svg(width=0 height=0 xmlns='http://www.w3.org/2000/svg')
			filter(x='-50%' y='-50%' width='200%' height='300%')#dropshadow
				feGaussianBlur(in='SourceAlpha', stddeviation='3')
				feOffset(dx='2', dy='5', result='offsetblur')
				feComponentTransfer
					feFuncA(type='linear', slope='0.5')
				femerge
					femergenode
					femergenode(in='SourceGraphic')
		
		+Headler
			+Navler
		+Mainler
			+Titler
			+Contactler
			+Contentler
+build