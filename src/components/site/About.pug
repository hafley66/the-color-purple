include ../global.pug
include ./Text.pug


mixin About
	#about.collapse.in
		.roh
			.col-sm-10.col-sm-offset-1
				+AboutMe
				+AboutSite

mixin AboutMe
	.AboutMe.roh
		+_SectionColumn(true, 'About Me', 'AboutMeLoop')
			.loop
				each text in about.me.text
					.skill
						p=text
				p.Signature
					|-Chris Hafley

mixin AboutSite
	.AboutSite.roh
		+_SectionColumn(true, 'About This Site', 'AboutSiteLoop')
			.loop
				each text in about.site.text
					.skill
						p=text
				p.Signature
					|-Thanks for visiting!